body, html
  line-height: 1
  font-weight: 200
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif

.clearfix
  display: inline-block
  &:after
    display: block
    content: "."
    height: 0
    line-height: 0
    clear: both
    visibility: hidden


@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5) //  手机DPI最小为1.5设置1.5的缩放
  .border-1px
    &::after
       -webkit-transform : scaleY(0.7)
       transform: scaleY(0.7)
  
@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 0.5) //  手机DPI最小为2设置0.5的缩放
  .border-1px
    &::after
       -webkit-transform : scaleY(0.5)
       transform: scaleY(0.5)